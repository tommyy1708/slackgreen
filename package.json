{
  "name": "slackgreen",
  "version": "1.0.0",
  "description": "Keep Slack status green and manage scheduled status changes",
  "main": "bin/slackgreen.js",
  "scripts": {
    "test": "jest",
    "build": "npm run build:macos-arm64 && npm run build:macos-x64 && npm run build:win && npm run build:linux",
    "build:macos-arm64": "pkg . --targets node18-macos-arm64 --output dist/slackgreen-macos-arm64",
    "build:macos-x64": "pkg . --targets node18-macos-x64 --output dist/slackgreen-macos-x64",
    "build:win": "pkg . --targets node18-win-x64 --output dist/slackgreen-win.exe",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/slackgreen-linux"
  },
  "keywords": ["slack", "status", "cli", "automation"],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "bin": {
    "slackgreen": "./bin/slackgreen.js"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": [],
    "targets": ["node18-macos-x64", "node18-win-x64", "node18-linux-x64"]
  },
  "dependencies": {
    "@slack/web-api": "^7.13.0",
    "commander": "^14.0.3",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "pkg": "^5.8.1"
  }
}
